#include <stdio.h>    // version 1

int main() {
    int n = 7;
    
    for(int i=1; i<=n; i++) {
        printf("%*s", n-i+1, " ");
        for(int j=0; j<i; j++) {
            printf("%d ", i);
        }
        printf("\n");
    }
    return 0;
}

#include <stdio.h>    // version 2

int main() {
    int n = 7;
    
    for(int i=1; i<=n; i++) {
        for(int j=1; j<=n; j++) {
            if(j<=n-i) {
                printf(" ");
            }
            else {
                printf("%d ", i);
            }
        }
        printf("\n");
    }
    return 0;
}
