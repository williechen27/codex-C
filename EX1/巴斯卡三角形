#include <stdio.h>

void print_spaces(int rows, int r) {
    for(int s=0; s<rows-r-1; s++) {
        printf(" ");
    }
}

void print_pascal_number(int rows, int r) {
    unsigned long long val = 1;  // 擴大至至少有64個bit
    for(int k=0; k<=r; k++) {
        printf("%llu ", val);
        /*if(k<r) {
            printf(" ");  // 元素之間的一個空白
        }*/
        val = val*(unsigned long long)(r-k)/(unsigned long long)(k+1);
    }
}

int main() {
    int rows = 5;
    for(int r=0; r<rows; r++) {
        print_spaces(rows, r);
        print_pascal_number(rows, r);
        printf("\n");
    }
    return 0;
}
